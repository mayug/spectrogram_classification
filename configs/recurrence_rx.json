{
    "name": "Recurrence_RXState",
    "n_gpu": 1,

    "arch": {
        "type": "resnet18",
        "args": {"num_classes": 4,
                 "num_channels": 1}
    },
    "data_loader": {
        "type": "RecurrenceDataLoader",
        "args":{
            "csv_file": "/home/mayug/projects/team3-2020/spectrogram_data_processing/datasets/summary_train_rx.csv",
            "root_dir":"/home/mayug/projects/team3-2020/spectrogram_data_processing/datasets/rec_train/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
            
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 3e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy"

    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5000,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 1000,

        "tensorboard": true
    }
}
